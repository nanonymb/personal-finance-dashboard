{
  "$schema": "https://schema.tauri.app/config/2.5.0",
  "productName": "finance-dashboard",
  "version": "0.1.0",
  "identifier": "com.example.financedashboard",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Finance Dashboard",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": { "csp": null }
  },
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out",
    "beforeDevCommand": "npm --prefix . run dev",
    "beforeBuildCommand": "npm --prefix . run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": []
  },
  "plugins": {
    "window": { "enabled": true }
  }
}